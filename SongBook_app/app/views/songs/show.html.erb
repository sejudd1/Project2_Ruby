<h1> <%= @song.name %> </h1>

<ul>
	<li>
		<%= @song.writer %><%= link_to " View Profile", user_path %>
	</li>
	<li>
		Genre: <%= @song.genre %> 
	</li>
	<li>
		Listen: <%= @song.file %>
	</li>
	<li>
		Likes: <%= @song.like %>
	</li>

</ul>

<h2> Feedback </h2><h6>Comments: <%= @song.comments.count %></h6>
	<% @song.comments.each do |comment| %>
		<p>
			Feedback:<%= comment.body %>, User:<%= comment.user_id %>
		</p>
	<% end %>

<h2> Add Your Feedback </h2>
<%= form_for :comment, url: comments_path do |f| %>
  <input type="hidden" name="song_id" value="<%= @song.id %>" />
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to the Library", songs_path %>
