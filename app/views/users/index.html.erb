<h1>Songwriters</h1>

<table class="table table-hover table table-bordered">
	<tr>
		<th>
			Songwriter
		</th>
		<th>
			Profile
		</th>
		<th>
			Contact
		</th>
	</tr>
	<% @users.each do |user| %>
	<tr>
		<td>
			<%= user.name %>
		</td>
		<td>
			<%= link_to " View", user_path( user.id ) %>
		</td>
		<td>
			<%= mail_to " Contact", user.email, class: "glyphicon glyphicon-envelope" %>
		</td>
	</tr>

	<% end %>
</table>


